<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    背景颜色-->
    <solid android:color="@color/white" />
    <!--    边框宽度和颜色-->
    <stroke
        android:width="1dip"
        android:color="#AAA1FA" />

    <!--    圆角-->
    <corners android:radius="1000dp" />

    <size
        android:width="30dp"
        android:height="30dp" />

    <!--    pdding内边距：Button里面的文字和边界的间隔-->
    <padding
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp" />

</shape>